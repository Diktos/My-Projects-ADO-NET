<Window x:Class="WPFThreadDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFThreadDemo"
        mc:Ignorable="d"
        Title="Timer" Height="300" Width="450">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Timer:" FontSize="20" Margin="0,5,0,5"/>
            <TextBlock x:Name="TimerClock" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center"/>

            <TextBlock Text="DispatcherTimer:" FontSize="20" Margin="0,10,0,5"/>
            <TextBlock x:Name="DispatcherClock" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
